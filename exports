export DEBFULLNAME="Fran Dieguez"
export DEBEMAIL="frandieguez@gnome.org"
export EDITOR="vim"


# Path variables
if [ -e $HOME/bin ]; then
    export PATH=$PATH:$HOME/bin
fi
if [ -e $HOME/.android-sdk-linux ]; then
    export PATH=$PATH:$HOME/.android-sdk-linux/tools:$HOME/.android-sdk-linux/platform-tools

    export ANDROID_HOME=$HOME/.android-sdk-linux
fi

if [ -e $HOME/.goenv ]; then
    export PATH="$HOME/.goenv/bin:$PATH"
    eval "$(goenv init -)"
    export GOROOT="`echo $HOME`/.goenv/versions/$(goenv version)/"
fi

if [ -e $HOME/.composer/bin]; then
    export PATH=$PATH:~/.composer/vendor/bin
fi

export GOPATH="$HOME/Projects/go"
export PATH=$GOPATH/bin:$PATH

export JAVA_HOME=/usr/lib/jvm/java-7-oracle/jre